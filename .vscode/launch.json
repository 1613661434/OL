{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "OL_MinGW_Debug", // 配置名称（自定义，显示在调试列表中）
			"type": "cppdbg", // 调试类型（C++ 调试固定为 cppdbg）
			"request": "launch", // 启动方式（launch 为启动新程序，attach 为附加到已有进程）
			"program": "${workspaceFolder}/ollib/test/bin/win32/test_ol_string_getByXml.exe", // 可执行文件路径（替换为你的程序路径）
			"args": [], // 程序启动参数（无参数则留空）
			"stopAtEntry": false, // 是否在程序入口处暂停（true 为暂停，适合调试启动逻辑）
			"cwd": "${workspaceFolder}", // 调试工作目录（项目根目录）
			"environment": [], // 环境变量（如需要额外变量可添加，格式：{"name": "变量名", "value": "值"}）
			"externalConsole": false, // 是否使用外部控制台（false 为内置终端，true 为弹出新窗口）
			"MIMode": "gdb", // 调试器模式（MinGW 用 gdb，MSVC 用 lldb）
			"setupCommands": [ // 调试器初始化命令（启用 pretty-printing 优化输出格式）
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "OL_MinGW_Build", // 调试前执行的任务（需与 tasks.json 中的 label 一致）
			"miDebuggerPath": "gdb.exe", // 调试器路径（MinGW 自带的 gdb，已配置环境变量可直接写文件名）,
			"logging": {
				"moduleLoad": false, // 是否显示模块加载日志（false 减少冗余输出）
				"trace": true // 是否显示调试器跟踪信息（调试配置出错时可设为 true 排查问题）
			}
		}
	]
}